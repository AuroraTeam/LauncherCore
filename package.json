{
    "name": "@auroralauncher/core",
    "version": "0.6.1",
    "description": "Base library for Aurora Launcher",
    "main": "./dist/index.js",
    "types": "./dist/types/index.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist",
        "prettier": "prettier --config .prettierrc.json --write src",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "prepublishOnly": "npm run clean && npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AuroraTeam/LauncherCore.git"
    },
    "author": "AuroraTeam",
    "contributors": [
        "JoCat (https://github.com/JoCat)"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/AuroraTeam/LauncherCore/issues"
    },
    "homepage": "https://github.com/AuroraTeam/LauncherCore#readme",
    "importSort": {
        ".ts": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@tsconfig/node16": "^1.0.3",
        "@types/node": "^16.11.56",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "eslint": "^8.8.0",
        "import-sort-style-module": "^6.0.0",
        "prettier": "^2.5.1",
        "prettier-plugin-import-sort": "0.0.7",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "got": "^12.0.1",
        "p-map": "^5.3.0"
    }
}
